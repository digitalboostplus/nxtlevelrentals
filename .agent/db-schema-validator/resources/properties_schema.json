{
    "collection": "properties",
    "description": "Physical real estate units managed by the system",
    "fields": {
        "id": {
            "type": "string",
            "required": true,
            "description": "Auto-generated document ID"
        },
        "landlordId": {
            "type": "string",
            "required": true,
            "description": "Reference to the landlord (user UID)"
        },
        "name": {
            "type": "string",
            "required": true,
            "maxLength": 100,
            "description": "Internal name or unit identifier (e.g., 'Apt 4B')"
        },
        "address": {
            "type": "string",
            "required": true,
            "description": "Full address string"
        },
        "description": {
            "type": "string",
            "required": false
        },
        "status": {
            "type": "string",
            "required": true,
            "enum": [
                "occupied",
                "vacant",
                "maintenance",
                "listed"
            ],
            "default": "vacant"
        },
        "rent": {
            "type": "number",
            "required": true,
            "description": "Monthly rent amount"
        },
        "images": {
            "type": "array",
            "description": "List of URLs for property photos"
        },
        "amenities": {
            "type": "array",
            "description": "List of amenities (e.g., 'AC', 'Parking')"
        },
        "bedrooms": {
            "type": "number"
        },
        "bathrooms": {
            "type": "number"
        },
        "squareFeet": {
            "type": "number"
        },
        "available": {
            "type": "boolean",
            "default": true
        },
        "landlordName": {
            "type": "string",
            "description": "Denormalized landlord name for display"
        },
        "managementStatus": {
            "type": "string",
            "enum": [
                "active",
                "inactive",
                "pending"
            ],
            "default": "active"
        },
        "createdAt": {
            "type": "timestamp",
            "required": true
        },
        "updatedAt": {
            "type": "timestamp",
            "required": true
        }
    },
    "indexes": [
        {
            "fields": [
                "landlordId",
                "status"
            ],
            "order": [
                "asc",
                "asc"
            ],
            "description": "Search properties by landlord and active status"
        }
    ],
    "securityNotes": [
        "Admins and the assigned Landlord can write",
        "Public or authenticated users can read depending on listing status"
    ]
}